@model IEnumerable<GEMA.Models.Secoes>

@{
    ViewBag.Title = "Seções";
}

<h2>Seções</h2>

<p>
    <input type="button" value="Criar seção" class="btn btn-default" onclick="location.href='@Url.Action("Create", "Secoes")'" />
</p>
<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Secao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id})" class="glyphicon glyphicon-pencil" title="Editar"></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new { id = item.Id})" class="glyphicon glyphicon-file" title="Detalhes"></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Secao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
       
        <td>
            <a href="@Url.Action("Delete", new { id = item.Id})" class="glyphicon glyphicon-remove red" title="Excluir"></a> 
        </td>
    </tr>
}

</table>

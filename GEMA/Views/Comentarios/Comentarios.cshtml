@model IEnumerable<GEMA.Models.Comentarios>

<div class="form-horizontal">
    <hr />
    <h3>Comentários</h3>
@using (Html.BeginForm("Comentarios", "Comentarios", FormMethod.Post, new { Id = "IdMateria" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-9">@Html.TextArea("Comentario", new { rows = 5, @class = "form-control" })
        @Html.ValidationMessage("Comentario", new { @class = "text-danger" })</div>
        <div class="col-md-3"><input type="submit" value="Enviar comentário" class="btn btn-default" /></div>
    </div>

}
</div>

<table class="table table-striped">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="row">
                    <div class="col-md-2">
                        <h4 class="glyphicon glyphicon-user text-primary"><span class="text-primary"> @Html.DisplayFor(modelItem => item.Pessoas.Nome)</span></h4>
                        <p>@Html.DisplayFor(modelItem => item.DataComentario)</p>
                </div>
                <div class="col-md-10">@Html.DisplayFor(modelItem => item.Comentario)</div>
            </div>
            </td>
        </tr>
    }

</table>
